<?xml version="1.0" encoding="utf-8"?>
<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
    </style>

    <!-- Style for BottomNavigationView -->
    <style name="BottomNavigationViewStyle" parent="Widget.Design.BottomNavigationView">
        <item name="itemIconSize">32dp</item> <!-- Increase icon size -->
        <item name="itemTextAppearance">@style/BottomNavigationViewTextAppearance</item>
        <item name="itemPaddingTop">4dp</item> <!-- Decrease top padding -->
        <item name="itemPaddingBottom">8dp</item> <!-- Decrease bottom padding -->
    </style>

    <style name="BottomNavigationViewTextAppearance" parent="TextAppearance.Design.Tab">
        <item name="android:textSize">14sp</item> <!-- Adjust text size if necessary -->
    </style>


</resources>
